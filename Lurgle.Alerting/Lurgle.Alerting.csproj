<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461;net47;net48;net5.0;netcoreapp2.1;netcoreapp3.1</TargetFrameworks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Matt Marlor</Authors>
    <Description>Alerting library that accelerates getting projects up and running with FluentEmail. Use text/HTML or Razor, Fluid, or Handlebars templates!</Description>
    <Copyright>Matt Marlor</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>LurgleMail.png</PackageIcon>
    <ApplicationIcon>LurgleMail.ico</ApplicationIcon>
    <PackageProjectUrl>https://github.com/MattMofDoom/Lurgle.Alerting</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MattMofDoom/Lurgle.Alerting</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>Fluent,Email,FluentEmail,Alert,Alerts,Alerting,Razor,Fluid,Liquid,Smtp,MailKit</PackageTags>
    <Version>1.2.1</Version>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <MvcRazorExcludeRefAssembliesFromPublish>false</MvcRazorExcludeRefAssembliesFromPublish>
    <PackageReleaseNotes>- Add MailKit as default sender
- Add mail host authentication
- Add additional targets
- Add test Razor template
- Add XML docs
- Code refactor
- Add AlertConfig constructor for passing config and optional overrides
- Expose MailTestTimeout to allow configuring the SMTP mail host test timeout (or disable with 0)
- Add MailSubject config to allow configuring a default subject
- Add sending an attachment from a stream
- Add Alerting.SetDebug for global debug mode
- Add MailDebug setting
- Consistently handle comma delimited email address strings
- Filter out invalid email addresses
- Validate default MailHost, From, To, Debug, Subject configs and return results to Alerting.AlertFailures
- Add Handlebars renderer, based on https://github.com/matthewturner/FluentEmail.Handlebars
- Automatically determine attachment content type
- Expose errors on send for examination by code
- Add unit tests</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.0|AnyCPU'">
    <DocumentationFile>C:\Users\mattm\source\repos\Lurgle.Alerting\Lurgle.Alerting\Lurgle.Alerting.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentEmail.Liquid" Version="3.0.0" />
    <PackageReference Include="FluentEmail.MailKit" Version="3.0.0" />
    <PackageReference Include="FluentEmail.Razor" Version="3.0.0" />
    <PackageReference Include="FluentEmail.Smtp" Version="3.0.0" />
    <PackageReference Include="Handlebars.Net" Version="2.0.8" />
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="5.0.2" />
    <PackageReference Include="MimeMapping" Version="1.0.1.37" />
    <PackageReference Include="RazorLight" Version="2.0.0-rc.3" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="5.0.0" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="Unofficial.Microsoft.mshtml.NetStandard" Version="7.0.3300.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LurgleMail.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
